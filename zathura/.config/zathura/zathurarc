# enable copy to clipboard 
set selection-clipboard clipboard

# contract $Home to tilde in window title
set window-title-home-tilde 1

# contract $Home to tilde in status bar
set statusbar-home-tilde 1

# enable incremental search
set incremental-search true

# zoom
map <C-i> zoom in
map <C-o> zoom out

# unmap things I don't need and only hit on accident
unmap r # rotate
unmap d # double page view


map <C-c> feedkeys ":exec zathuratoclipboard $FILE<Return>"


